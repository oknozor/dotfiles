exec_always --no-startup-id "killall polybar;$HOME/.config/polybar/launch.sh -r panel"
exec_always --no-startup-id "compton --config $HOME/.config/compton.conf -b"
exec "feh --bg-scale ~/.dotfiles/lockscreens/giraud3.jpg "
#
