{
  "$schema": "https://f.jstanger.dev/github/ironbar/schema.json",
  "anchor_to_edges": true,
  "position": "top",
  "icon_theme": "Papirus",
  "start": [
    {
      "type": "launcher",
      "show_names": false,
      "show_icons": true,
      "icon_size": 32
    }
  ],
  "center": [
    {
      "type": "clock",
      "disable_popup": true
    }
  ],
  "end": [
    {
      "type": "music",
      "player_type": "mpris",
      "truncate": "start"
    },
    {
      "type": "volume",
      "format": "{icon} {percentage}%",
      "max_volume": 100,
      "icons": {
        "volume_high": "󰕾",
        "volume_medium": "󰖀",
        "volume_low": "󰕿",
        "muted": "󰝟"
      }
    },
    {
      "type": "custom",
      "bar": [
        {
          "type": "box",
          "name": "archupdates",
          "widgets": [
            {
              "type": "box",
              "tooltip": "System updates",
              "widgets": [
                {
                  "label": " ",
                  "type": "label"
                },
                {
                  "type": "script",
                  "cmd": "~/dotfiles/scripts/checkupdates.sh",
                  "mode": "poll",
                  "interval": 180000
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "clipboard",
      "max_items": 3,
      "truncate": {
        "mode": "end",
        "length": 50
      }
    },
    {
      "type": "notifications",
      "show_count": true,
      "icons": {
        "closed_none": "",
        "closed_some": "",
        "closed_dnd": "",
        "open_none": "",
        "open_some": "",
        "open_dnd": ""
      }
    },
    {
      "type": "tray",
      "direction": "horizontal",
      "icon_size": 22
    }
  ]
}
