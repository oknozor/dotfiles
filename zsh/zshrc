# History
HISTFILE=~/.histfile
HISTSIZE=1000
SAVEHIST=1000
bindkey -e

# Editor
export VISUAL="nvim"
[[ $- != *i* ]] && return

# Antigen 
source /usr/share/zsh/share/antigen.zsh 
antigen use oh-my-zsh
antigen bundle git
antigen bundle zsh-users/zsh-syntax-highlighting
antigen bundle tarruda/zsh-autosuggestions
antigen bundle zuxfoucault/colored-man-pages_mod
antigen bundle  zsh-users/zsh-completions
antigen apply

fpath=( ~/.zfunc "${fpath[@]}" )

export EDITOR=nvim
export BAT_THEME="Solarized (dark)"


# Aliases
alias start='sudo systemctl start'
alias stop='sudo systemctl stop'
alias status='systemctl status'
alias restart='sudo systemctl restart'
alias jof='journalctl -u'
alias fjof='journalctl -fu'
alias music='ncmpcpp -s media_library'
alias impmus='beet import ~/Downloads/SoulSeek'
alias vim="nvim"
alias record="wf-recorder -f ${filename}"
alias ll='ls -larth'
alias ls='ls --color=auto'
alias lg='ls |grep' 
alias lt='ls -t' 
alias lr='ls -rt' 
alias lr='ls -rt' 
alias wa='watch --color -t' 
alias k='kubectl'
alias dc='docker-compose'
alias ovim="vim"
alias cat="bat"
alias ocat="/usr/bin/cat"
alias grep='rg'
alias ogrep='/usr/bin/grep'
alias fzf='sk'
alias du='dust'
alias copy='wl-copy'

export SOPS_AGE_KEY_FILE=~/.config/sops/age/keys.txt

prompt off
eval "$(starship init zsh)"
eval "$(direnv hook zsh)"
